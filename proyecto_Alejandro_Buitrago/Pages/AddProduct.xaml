<Page x:Class="proyecto_Alejandro_Buitrago.Pages.AddProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:proyecto_Alejandro_Buitrago.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="AddProduct"
      Background="White">

    <StackPanel Margin="5" Background="AliceBlue" Orientation="Vertical" Height="600">
        <TextBlock Text="NUEVO PRODUCTO" HorizontalAlignment="Center" FontSize="20" Margin="200,10,209,0" FontWeight="Bold"/>
        <Grid Height="471" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="54*" />
                <RowDefinition Height="42"/>
                <RowDefinition Height="54*" />
                <RowDefinition Height="49"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="42"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="58"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Referencia" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28" Margin="319,-6,319,5" Width="92"/>
            <TextBox Grid.Row="1" Grid.Column="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="700" Height="28" Margin="15,11,15,15"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Tipo de producto " FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Margin="286,7,286,9" Width="158"/>
            <ComboBox Grid.Row="3" Grid.Column="0" x:Name="TipoCMB" Margin="10" SelectionChanged="TipoCMB_SelectionChanged" FontSize="20" HorizontalContentAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="710" Height="34" x:Name="categoryBox" Visibility="Hidden"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Tipo de Madera " FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28" Margin="292,11,292,10" Width="146"/>
            <ComboBox Grid.Row="5" Grid.Column="0" x:Name="MarcaCMB" Margin="10" FontSize="20" HorizontalContentAlignment="Center"/>
            <TextBox Grid.Row="5" Grid.Column="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="710" Height="33" x:Name="brandBox" Visibility="Hidden"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Medida" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Margin="328,10,332,6" Width="70"/>
            <ComboBox Grid.Row="7" Grid.Column="0" x:Name="MedidaCMB" Margin="10" FontSize="20" HorizontalContentAlignment="Center"/>
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Añade una descripción " FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Margin="262,11,262,3" Width="206"/>
            <TextBox Grid.Row="9" Grid.Column="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,19,10,11" Width="700" Height="28"/>
            <CheckBox  x:Name="categoryCheck" Grid.Row="3" Grid.Column="1" Width="40" Height="38" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Checked="CheckBox_Checked" Margin="0,13,0,3"/>
            <CheckBox  x:Name="brandCheck" Grid.Row="5" Grid.Column="1" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" Checked="brandCheck_Checked" Margin="0,6,0,7"/>
        </Grid>

        <Button Content="Aceptar" Margin="200,0,200,10" Click="Button_Click"/>
        <Button Content="Cancelar" Margin="200,0,200,0" Click="Button_Click_1"/>

    </StackPanel>
</Page>
